@model SimpleBlog.Areas.Admin.ViewModels.PostsForm

<h1>@(Model.IsNew ? "Create Post" : "Update Post " + Model.Title )</h1>

@using(Html.BeginForm("Form", "Posts"))
{
    if (!Model.IsNew)
    {
        @Html.HidenFor(x => x.PostId)
    }
    
    <div class="row">
        <div class="col-md-8">
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Content)
                @Html.TextAreaFor(x => x.Content, new { @class = "form-control", data_slug="#Title" })
            </div>
        </div>


        <div class="col-md-4">
            <div class="panel panle-info">
                <div class="panel-heading">Post Actions</div>
                <div class="panel-body">
                    <input type="submit" value="@(Model.IsNew ? "PublishPost" : "Update Post")" class="btn btn-success btn-sm" /> 
                    <a href="@Url.Action("index")" class="btn btn-primary btn-sm">Back</a>
                </div>
            </div>
        </div>
    </div>
       
}