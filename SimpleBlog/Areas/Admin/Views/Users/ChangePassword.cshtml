@model SimpleBlog.Areas.Admin.ViewModels.UsersNew

<h1>Change Password for @Model.Name</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new {@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.RepeatedPassword)
        @Html.TextBoxFor(x => x.RepeatedPassword, new { @class = "form-control" })
    </div>

    <a href="@Url.Action("Index")" class="btn btn-sm btn-primary">Cancel</a>
    <input type="submit" value="Edit User" />
    
}