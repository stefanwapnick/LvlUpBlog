@model SimpleBlog.Areas.Admin.ViewModels.UsersEdit

<h1>Edit User @Model.Name</h1>

@using (Html.BeginForm())
{
    
    
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new {@class="form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor( x => x.Email, new { @class = "form-control", type="email"} )
    </div>
    
    @Html.ValidationSummary()

    @Html.Partial("_RoleSelector", Model.Roles)

    <a href="@Url.Action("Index")" class="btn btn-primary">Cancel</a>
    <input type="submit" value="Edit User" class="btn btn-primary" />
    
}