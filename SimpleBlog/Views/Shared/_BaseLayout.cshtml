@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Simple Blog</title>

    @Styles.Render("~/styles")
</head>
<body>
    <div class="site-header">
        <header>
            <h1 class="page-header">
                <a href="@Url.RouteUrl("Home")">LvlUp Blog</a>
                <small>The blog that levels up...</small>
            </h1>   
        </header>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @RenderBody()
            </div>
            <div class="col-lg-4 sidebar">
                <!-- Get sidebar from sub-controller -->
                @Html.Action("Sidebar", "Layout");
            </div>
        </div>

        <footer>
            <p>&copy; @DateTime.UtcNow.Year - LvlUp Blog</p>
        </footer>
    </div>

    @Scripts.Render("~/scripts")
    @RenderSection("Scripts", required: false)

</body>
</html>